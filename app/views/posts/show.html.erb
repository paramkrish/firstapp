<% provide(:title, "Home") %>
<h1>
<% if @post.name %>
<div class='post'><%= @post.name %></div>
<% end %>
</h1>

<%= link_to  "Edit this Post", edit_post_path  , class: "button" %>
<%= link_to  "Show all", posts_path  , class: "button" %>
<%= link_to  "Delete", @post, :confirm => "Are you sure ?" , :method => :delete  , class: "button" %>